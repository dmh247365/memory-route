extends base

block content
  main.main
    .card-container
    
      each route in routes
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`img/routes/${route.image}`, alt=`${route.name}`)
            h3.heading-tertirary
              span= route.title

          .card__details
            h4.card__sub-heading= route.learn
            p.card__text= 'the roundabout'
            .card__data
              svg.card__icon
              span= `test`

          .card__footer
            p
              span.card__footer-value= route.elements.length
              | 
              span.card__footer-text elements
